<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Notey.App.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Notey.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Background="White"
        Icon="/Assets/avalonia-logo.ico"
        Title="Notey.App">
    
    
    
    <StackPanel Orientation="Vertical">
            <Panel>
                <StackPanel Orientation="Vertical">
                    <TextBox Watermark="Insert Title..." BorderThickness="0" Background="White" Text="{Binding Page.Title}"></TextBox>
                    <TextBox Watermark="Type..." BorderThickness="0" Background="White" Text="{Binding Page.Body}"></TextBox>
                </StackPanel>
            </Panel>
            
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Content="Previous Page"></Button>
                <Button Content="Next Page"></Button>
            </StackPanel>
            
        </StackPanel>
        
    
</Window>
